{
  "name": "@synthome/ai",
  "version": "0.1.0",
  "description": "AI SDK tools for Synthome media workflows",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "publish": "npm publish --access public"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "@synthome/sdk": "^0.6.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "eslint": "^9.34.0",
    "tsup": "^8.5.0",
    "typescript": "5.9.2"
  },
  "keywords": [
    "synthome",
    "ai",
    "ai-sdk",
    "vercel-ai",
    "tools",
    "video",
    "image",
    "audio",
    "generation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/synthome/sdk"
  },
  "homepage": "https://synthome.dev",
  "bugs": {
    "url": "https://github.com/synthome/sdk/issues"
  }
}
