{
  "name": "open-video",
  "private": true,
  "scripts": {
    "start:railway-be": "cd apps/be && bun run railway-start",
    "start:schedule-worker": "cd apps/schedule-worker && bun run railway-start",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=20.9"
  },
  "packageManager": "bun@1.2.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "resolutions": {
    "drizzle-orm": "0.38.3"
  },
  "overrides": {
    "drizzle-orm": "0.38.3"
  },
  "dependencies": {
    "tailwindcss-animate": "^1.0.7"
  }
}
